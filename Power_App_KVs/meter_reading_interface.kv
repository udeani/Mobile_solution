
<Meter_read_per_acc>:
    on_leave: reading_textbox.text = ""

    MDBoxLayout:
        size_hint: 1,.94
        orientation: "vertical"

        MDLabel:
            size_hint: 1,.81
            canvas.before:
                Color:
                    rgba: 0,1,0,.1
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {"top":1, "center_x": .5}
            halign: "center"
            valign: "center"
            text: "Camera for image here with flash and zoom functions"


        MDCard:
            size_hint: 1, .16
            orientation: "vertical"
            MDGridLayout:
                cols: 2
                MDGridLayout:
                    cols: 1
                    size_hint_x: 0.7
                    MDLabel:
                        id: acc_no_to_read
                        size_hint_y: 0.03
                        text: "root.acc_no"
                        font_size: "10dp"
                        halign: "left"
                    MDLabel:
                        id: acc_name_o_read
                        size_hint_y: 0.03
                        text: "root.acc_name"
                        font_size: "10dp"
                        halign: "left"
                    MDLabel:
                        size_hint_y: .001
                        canvas:
                            Color:
                                rgba: app.theme_cls.primary_color
                            Rectangle:
                                pos: int(self.pos[0]+12), self.pos[1]
                                size: int(self.size[0]-24), self.size[1]
                    MDGridLayout:
                        id: the_grid
                        rows: 1
                        size_hint_y: 0.05
                        AnchorLayout:
                            pos_hint: the_grid.pos
                            size_hint: (1, None)
                            height: dp(30)
                            width: dp(200)
                            TextInput:
                                id: reading_textbox
                                #size_hint: 0.8, 0.05
                                required: True
                                text: ""
                                font_size: "12dp"
                                multiline: False
                                #background_color: 0,0,0,.1
                                on_text: root.clear_label()
                            MDLabel:
                                id: faker1
                                text: "Enter Reading"
                                #text_color: 1,1,1,1
                                font_size: "11dp"
                                size_hint: None, None
                                size: reading_textbox.size
                                pos_hint: None, None
                                pos: self.parent.pos
                                #md_bg_color: 0,1,0,1

                MDFloatLayout:
                    size_hint_x: 0.3
                    MDFloatingActionButton:
                        pos_hint: {"right": 1, "top": 1}
                        icon: "content-save"
                        on_press: app.save_reading(reading_textbox.text)