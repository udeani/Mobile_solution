
<Meter_read_per_acc>:
    on_leave: reading_textbox.text = ""
    on_leave: root._on_leave()
    on_enter: root.choose_widgets()

    MDBoxLayout:
        size_hint: 1,.94
        orientation: "vertical"

        MDCard:
            id: camera_label
            size_hint: 1,.81
            orientation: "vertical"
            MDBoxLayout:
                id: option_A
                size_hint: 1, 0.8
                orientation: "vertical"
                MDGridLayout:
                    id:camera_caller
                    cols: 2
                    MDLabel:
                        text: "Take Picture"
                        size_hint_x: .6
                    MDIconButton:
                        icon: "camera"
                        halign: "center"
                        valign: "center"
                        pos_hint: {"top":1, "center_x": .5}
                        on_press: root.take_picture()
                MDGridLayout:
                    id: file_chooser_caller
                    cols: 2
                    MDLabel:
                        text: "Choose from file"
                        size_hint_x: .6
                    MDIconButton:
                        icon: "file-find"
                        halign: "center"
                        valign: "center"
                        pos_hint: {"top":1, "center_x": .5}
                        on_press: root.file_chooser()
            MDCard:
                id: option_B
                orientation: "horizontal"
                size_hint: 1, .1
                MDBoxLayout:
                    #cols: 3
                    orientation: "horizontal"
                    Button:
                        text: "Delete"
                        font_size: "10dp"
                        on_press: root.delete()

                    Button:
                        text: "Snap"
                        font_size: "10sp"
                        on_press: root.take_picture()

                    Button:
                        text: "Choose from file"
                        font_size: "10sp"
                        on_press: root.file_chooser()

        MDCard:
            size_hint: 1, .16
            orientation: "vertical"
            MDGridLayout:
                cols: 2
                MDGridLayout:
                    cols: 1
                    size_hint_x: 0.7
                    MDLabel:
                        id: acc_no_to_read
                        size_hint_y: 0.03
                        text: "root.acc_no"
                        font_size: "10dp"
                        halign: "left"
                    MDLabel:
                        id: acc_name_o_read
                        size_hint_y: 0.03
                        text: "root.acc_name"
                        font_size: "10dp"
                        halign: "left"
                    MDLabel:
                        size_hint_y: .001
                        canvas:
                            Color:
                                rgba: app.theme_cls.primary_color
                            Rectangle:
                                pos: int(self.pos[0]+12), self.pos[1]
                                size: int(self.size[0]-24), self.size[1]
                    MDGridLayout:
                        id: the_grid
                        rows: 1
                        size_hint_y: 0.05
                        AnchorLayout:
                            pos_hint: the_grid.pos
                            size_hint: (1, None)
                            height: dp(30)
                            width: dp(200)
                            TextInput:
                                id: reading_textbox
                                #size_hint: 0.8, 0.05
                                required: True
                                text: ""
                                font_size: "12dp"
                                multiline: False
                                #background_color: 0,0,0,.1
                                on_text: root.clear_label()
                            MDLabel:
                                id: faker1
                                text: "Enter Reading"
                                #text_color: 1,1,1,1
                                font_size: "11dp"
                                size_hint: None, None
                                size: reading_textbox.size
                                pos_hint: None, None
                                pos: self.parent.pos
                                #md_bg_color: 0,1,0,1

                MDFloatLayout:
                    size_hint_x: 0.3
                    MDFloatingActionButton:
                        pos_hint: {"right": 1, "top": 1}
                        icon: "content-save"
                        on_press: root.save_reading(reading_textbox.text)