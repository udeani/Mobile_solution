#<Meters_to_read>:
Screen:
    #id: None
    x_coordinate: None
    y_coordinate: None
    read_status: False

    MDBoxLayout:
        id: main_layout
        orientation: "vertical"
        MDCard:
            id: main_template_background
            padding: 2
            orientation: "vertical"
            size_hint: 1,.2
            spacing: 2
            on_press:app.red_meter(acc_number.text, names.text)
            #on_press: print(main_layout.parent.id)
            md_bg_color: app.theme_cls.primary_light if main_layout.parent.read_status is False else [0,.9,0,1]

            MDGridLayout:
                cols: 2
                spacing: 4
                size_hint: 1,.7
                MDLabel:
                    size_hint: .2,1
                    canvas.before:
                        Color:
                            rgba: 0,1,0,1
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    pos_hint: {"top":1, "center_x": .5}
                    halign: "center"
                    valign: "center"
                    text: "meter avatar here"

                MDGridLayout:
                    cols: 2
                    size_hint: 1,1
                    MDGridLayout:
                        cols: 1
                        size_hint: .8,1
                        MDLabel:
                            id: acc_number
                            halign: "left"
                            text: ""
                            font_size: "10dp"
                        MDLabel:
                            id: names
                            halign: "left"
                            text: ""
                            font_size: "10dp"

                        MDLabel:
                            id: payment_details
                            halign: "left"
                            markup: True
                            text: ""
                            font_size: "8dp"
                    MDGridLayout:
                        cols: 1
                        size_hint_x: 0.2
                        MDIconButton:
                            icon: "map-marker"
                            size_hint: 1,1
                            on_press: app.nothing()
                        MDLabel:
                            id: distance_label
                            text: "2m"
                            font_size: "8dp"

            MDBoxLayout:
                size_hint: 1,.3
                orientation: "horizontal"
                AnchorLayout:
                    MDTextFieldRect:
                        disabled: True
                        helper_text: "Enter Reading"
                    MDLabel:
                        padding: ["12dp","12dp"]
                        text: "EDIT"
                        font_size: "8dp"
                        halign: "right"

                MDIconButton:
                    size_hint: .3,.9
                    icon: "upload"
                    font_size: "5dp"
                    halign: "right"

