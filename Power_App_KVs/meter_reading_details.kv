<Meters_to_read@MDBoxLayout>:
    size_hint: 1,.3
    orientation:"vertical"
    MDCard:
        orientation: "horizontal"
        size_hint: 1,.2
        spacing: 4
        on_press: app.change_screen_1('Meter reading page')
        MDLabel:
            size_hint: .2,1
            canvas.before:
                Color:
                    rgba: 0,1,0,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            pos_hint: {"top":1, "center_x": .5}
            halign: "center"
            valign: "center"
            text: "meter avatar here"
            #icon: "language-python"
            #font_size: "40dp"
        MDBoxLayout:
            orientation:"vertical"
            halign: "left"
            valign: "left"
            size_hint: .3,1
            MDLabel:
                halign: "left"
                text: "01234567890"
                font_size: "10dp"
            MDLabel:
                halign: "left"
                text: "firstName L. I."
                font_size: "10dp"
            MDLabel:
                halign: "left"
                text: "acc ID/PIN"
                font_size: "10dp"
        MDBoxLayout:
            orientation:"vertical"
            halign: "left"
            valign: "left"
            size_hint: .3,1
            MDLabel:
                halign: "left"
                text: "current: 0000000"
                font_size: "10dp"
            MDLabel:
                halign: "left"
                text: "prev: 0000000"
                font_size: "10dp"
            MDLabel:
                halign: "left"
                text: "00000"
                font_size: "10dp"

    MDBoxLayout:
        size_hint: 1,.08
        orientation: "horizontal"
        MDTextFieldRect:
            helper_text: "Enter Reading"
        MDIconButton:
            size_hint: .3,.9
            icon: "camera"
            font_size: "5dp"
        MDIconButton:
            icon: "map-marker"
            size_hint: .3,.9


