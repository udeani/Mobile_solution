# Creating a general control to the MDTextField
<Login_screen>:
    on_pre_enter: root._on_enter()
    MDBoxLayout:
        pos_hint: {'center_x': .5}
        orientation: 'vertical'
        spacing: "5sp"
        padding: "30sp"

        MDGridLayout:
            cols: 1
            pos_hint: {'center_x': .5}
            Image:
                id: company_logo
                #adaptive_size: True
                source: 'random_logo.png'
            MDLabel:
                id: company_motto
                pos_hint: {"center_x": .5, "center_y": .5}
                text: "Company's Name and Logo"
                halign: 'center'
                font_size: '12sp'
        MDGridLayout:
            cols: 1
            pos_hint: {'center_x': .5}
            halign: "center"
            valign: "center"

            MDTextField:
                pos_hint: {'center_x': .5}
                #font_size: "14sp"
                font_hinting: "8sp"
                id: user_name_input
                multiline: False
                hint_text: 'User Name'

            MDTextField:
                pos_hint: {'center_x': .5}
                id: password_input
                hint_text: 'Password'
                multiline: False
                password: True

            MDFloatLayout:
                id: login_float_layout

                MDRoundFlatButton:
                    id: login_button
                    pos_hint: {'center_x': .5,'center_y': .3}
                    y: self.parent.y+self.height+self.height
                    text: 'Login'
                    on_press: root.login_anim(self.size, self.pos)
                    #on_release: app.user_login(user_name=user_name_input.text, password=password_input.text)
                    #font_size: "10dp"
        MDBoxLayout:
            id: anim_1
            orientation: "horizontal"
            size_hint: (1,.1)
            MDLabel:
                id: animation_text
                spacing: 0
                text: '' #app.check_for_update()
                halign: "right"
                size_hint: (1,.06)
            MDLabel:
                id: animation_label1
                circle_start: 0
                circle_stop: 0
                spacing: 0
                halign: "left"
                text: '' #app.check_for_update()
                size_hint: (1,.06)

        MDGridLayout:
            spacing: "10dp"
            size_hint: (.5,.3)
            rows: app.widget_sizer(id="login_misc", parent_width=self.parent.width, parent_height=self.parent.height)
            padding: 0
            spacing: 1
            pos_hint: {'right':1, 'bottom': .1}
            MDGridLayout:
                halign: 'right'
                rows: 1
                MDLabel:
                    id: work_offline_label
                    text: 'Online Mode'
                MDSwitch:
                    widget_style: 'ios'
                    active: True
                    on_active:app.work_offline(*args)
            MDGridLayout:
                halign: 'right'
                rows: 1
                MDLabel:
                    id: dark_mode_label
                    text: 'Light Theme'
                MDSwitch:
                    active: True
                    widget_style: 'ios'
                    on_active:app.lightening_chooser(*args)

        MDLabel:
            id: empty_label1
            text: ''
            size_hint: (1,.2)
            width: '200sp'
            height: .4

        MDGridLayout:
            size_hint: (1,.1)
            pos_hint: {'left':.1, 'top': 1}
            rows: 1
            halign: "center"
            MDLabel:
                halign: "left"
                id: lat_nd_long
                text: '6.787985, 4.577483'
                font_size: '11sp'
            MDLabel:
                halign: "right"
                id: app_version
                text: 'Version 0.1'
                font_size: lat_nd_long.font_size
