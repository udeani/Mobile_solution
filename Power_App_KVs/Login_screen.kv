# Creating a general control to the MDTextField

<Login_screen>:
    MDBoxLayout:
        pos_hint: {'center_x': .5}
        orientation: 'vertical'
        spacing: 0
        padding: 20

        MDGridLayout:
            cols: 1
            pos_hint: {'center_x': .5}
            Image:
                id: company_logo
                #adaptive_size: True
                source: 'C:/Users/HENRY/Documents/Python Scripts/BEDC/Power_App/Power_App_KVs/random_logo.png'
            MDLabel:
                id: company_motto
                pos_hint: {"center_x": .5, "center_y": .5}
                text: "Company's Name and Logo"
                halign: 'center'
                font_size: '12sp'

        MDTextField:
            pos_hint: {'center_x': .5}
            font_size: "14dp"
            font_hinting: "8dp"
            id: user_name_input
            multiline: False
            hint_text: 'User Name'

        MDTextField:
            pos_hint: {'center_x': .5}
            id: password_input
            hint_text: 'Password'
            multiline: False
            password: True

        MDRoundFlatButton:
            id: login_button
            pos_hint: {'center_x': .5}
            text: 'Login'
            on_release: app.user_login(), app.change_screen('scr_con')
        MDLabel:
            id: empty_label1
            text: '' #app.check_for_update()
            size_hint: (1,.1)
            width: '200dp'
            height: .4

        MDGridLayout:
            spacing: "10dp"
            size_hint: (None,.3)
            width: '140dp'
            rows: 2
            padding: 0
            spacing: 1
            pos_hint: {'right':1, 'bottom': .1}
            MDGridLayout:
                halign: 'right'
                rows: 1
                MDLabel:
                    id: work_offline_label
                    text: 'Online Mode'
                MDSwitch:
                    widget_style: 'ios'
                    active: True
                    on_active:app.work_offline(*args)
            MDGridLayout:
                halign: 'right'
                rows: 1
                MDLabel:
                    id: dark_mode_label
                    text: 'Light Theme'
                MDSwitch:
                    active: True
                    widget_style: 'ios'
                    on_active:app.lightening_chooser(*args)

        MDLabel:
            id: empty_label1
            text: ''
            size_hint: (1,.2)
            width: '200sp'
            height: .4

        MDGridLayout:
            size_hint: (1,.1)
            pos_hint: {'left':.1, 'top': 1}
            rows: 1
            halign: "center"
            MDLabel:
                halign: "left"
                id: lat_nd_long
                text: '6.787985, 4.577483'
                font_size: '11sp'
            MDLabel:
                halign: "right"
                id: app_version
                text: 'Version 0.1'
                font_size: '11sp'
